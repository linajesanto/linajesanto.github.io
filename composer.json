{
    "name": "pantheon-upstreams/drupal-project",
    "description": "Install Drupal 9 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.8",
        "cweagans/composer-patches": "^1.0",
        "drupal-tome/tome_drush": "dev-master",
        "drupal/admin_toolbar": "^3.0",
        "drupal/auto_entitylabel": "^3.0@beta",
        "drupal/config_direct_save": "^1.0",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-recommended": "^9.3",
        "drupal/css_editor": "^1.3",
        "drupal/custom_add_another": "^1.0@beta",
        "drupal/field_group": "^3.2",
        "drupal/gin": "^3.0@alpha",
        "drupal/gin_toolbar": "^1.0@beta",
        "drupal/metatag": "^1.16",
        "drupal/paragraphs": "^1.12",
        "drupal/pathauto": "^1.6",
        "drupal/tome": "^1.4",
        "drupal/video_embed_field": "^2.2",
        "drupal/views_field_formatter": "^1.13",
        "drush/drush": "^10"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
	    "si": "drush tome:install -y",
        "start": "drush runserver",
        "export": "./scripts/export.sh",
        "deploy": "./scripts/deploy.sh",
        "drush": "drush"
    },
    "extra": {
        "patches": {
            "drupal/core": {
                "3056234: User context": "https://www.drupal.org/files/issues/2019-10-23/3056234-10.patch"
            },
            "drupal/css_editor": {
                "Save status": "https://www.drupal.org/files/issues/2021-03-10/css_editor-revert_config_is_saved_seperate-3160715-9.patch"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[project-root]/pantheon.upstream.yml": false,
                "[project-root]/.gitattributes": false
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true
        }
    }
}
